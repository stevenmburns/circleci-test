FROM ubuntu:18.04 as tally_image

RUN apt-get update && apt-get install -yq pkg-config python3 python3-pip python3-venv git build-essential graphviz libgraphviz-dev protobuf-compiler curl && apt-get clean

RUN \
    python3 -m venv general && \
    bash -c "source general/bin/activate; pip install pytest coverage pytest-cov coverage-badge codacy-coverage"

RUN \
    apt-get install zlib1g-dev && \
    bash -c "source general/bin/activate && pip install --upgrade pip && pip install --upgrade wheel && pip install python-sat"












